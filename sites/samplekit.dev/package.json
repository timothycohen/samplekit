{
	"name": "samplekit.dev",
	"private": true,
	"description": "A collection of SvelteKit design pattern examples.",
	"author": "Tim Cohen <contact@timcohen.dev>",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"format": "prettier --ignore-path ../../.prettierignore --check .",
		"format:fix": "prettier --ignore-path ../../.prettierignore --list-different --write .",
		"lint": "pnpm -w run lint:samplekit",
		"lint:fix": "pnpm -w run lint:samplekit:fix",
		"check:spell": "cspell lint --no-must-find-files **/articles/**/*.svelte",
		"sync": "svelte-kit sync",
		"check:svelte": "pnpm sync && svelte-check --fail-on-warnings --tsconfig ./tsconfig.json",
		"check": "pnpm check:spell && pnpm run check:svelte",
		"clean": "rm -rf .svelte-kit build",
		"validate": "pnpm install --frozen-lockfile && pnpm format && pnpm lint && pnpm check",
		"build:dependencies": "for dir in auth preprocess-markdown preprocess-shiki preprocess-katex svelte-crop-window; do pnpm --prefix ../../packages/$dir build; done",
		"build:site": "read -p 'Which .env mode? (ex: production uses .env.production): ' mode; if [ -z $mode ]; then echo Aborted && exit 1; elif [ ! -e .env.$mode ]; then echo Not found && exit 1; fi; NODE_OPTIONS='--max-old-space-size=2560' vite build --mode $mode",
		"build": "pnpm build:dependencies && pnpm build:site",
		"dev:up": "docker compose -f ../../DockerCompose.samplekit.dev.yaml up -d",
		"dev:db:apply_migrations": "env-cmd -f .env.development node ./scripts/applyDbMigrations.js",
		"dev:db:cli": "docker exec --user postgres --interactive --tty sk-dev-db psql",
		"dev:db:studio": "env-cmd -f .env.development drizzle-kit studio --config drizzle.studio.ts",
		"dev:kv:cli": "docker exec --interactive --tty sk-dev-kv redis-cli",
		"dev:down": "docker compose -f ../../DockerCompose.samplekit.dev.yaml down --volumes",
		"dev": "vite dev",
		"preview:up": "docker compose -f ../../DockerCompose.samplekit.preview.yaml up",
		"preview:down": "docker compose -f ../../DockerCompose.samplekit.preview.yaml down",
		"preview:delete": "pnpm preview:down --volumes",
		"generate:db_migrations": "drizzle-kit generate --config drizzle.gen.ts",
		"generate:theme_utils": "./scripts/generate-theme-utils.sh",
		"generate:graphql_codegen": "graphql-codegen",
		"generate": "for cmd in db_migrations theme_utils graphql_codegen; do pnpm generate:$cmd; done",
		"ses:update_templates": "env-cmd -f .env.production node ./scripts/email/updateTemplates.js"
	},
	"dependencies": {
		"@aws-sdk/client-cloudfront": "^3.675.0",
		"@aws-sdk/client-rekognition": "^3.675.0",
		"@aws-sdk/client-s3": "^3.675.0",
		"@aws-sdk/client-ses": "^3.675.0",
		"@aws-sdk/s3-presigned-post": "^3.675.0",
		"@samplekit/auth": "workspace:^",
		"@samplekit/preprocess-katex": "workspace:^",
		"@samplekit/preprocess-markdown": "workspace:^",
		"@samplekit/preprocess-shiki": "workspace:^",
		"@samplekit/svelte-crop-window": "workspace:^",
		"@sentry/sveltekit": "^8.34.0",
		"@shopify/storefront-api-client": "^1.0.2",
		"body-scroll-lock-upgrade": "^1.1.0",
		"drizzle-orm": "^0.35.2",
		"drizzle-zod": "^0.5.1",
		"lucide-svelte": "^0.453.0",
		"pg": "^8.13.0",
		"pino-pretty": "^11.3.0",
		"platform": "^1.3.6",
		"twilio": "^5.3.4",
		"vaul-svelte": "^0.3.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.3",
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.83.0",
		"@shopify/api-codegen-preset": "^1.1.1",
		"@sveltejs/adapter-node": "^5.2.8",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@types/pg": "^8.11.10",
		"@types/platform": "^1.3.6",
		"@types/postcss-js": "^4.0.4",
		"autoprefixer": "^10.4.20",
		"drizzle-kit": "^0.26.2",
		"env-cmd": "^10.1.0",
		"estree-walker": "^3.0.3",
		"ioredis": "^5.4.1",
		"magic-string": "^0.30.12",
		"postcss": "^8.4.47",
		"postcss-js": "^4.0.1",
		"shiki": "^1.22.0",
		"svelte": "^5.0.2",
		"svelte-check": "^4.0.5",
		"sveltekit-superforms": "^2.20.0",
		"tailwindcss": "^3.4.14",
		"turnstile-types": "^1.2.3",
		"vite": "^5.4.9"
	}
}
