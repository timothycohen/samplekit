{
	"name": "samplekit-monorepo",
	"private": true,
	"description": "Monorepo for SampleKit",
	"author": "Tim Cohen <contact@timcohen.dev>",
	"license": "MIT",
	"type": "module",
	"packageManager": "pnpm@9.5.0",
	"engines": {
		"node": "~20.14"
	},
	"scripts": {
		"format": "prettier --check .",
		"format:fix": "prettier --list-different --write .",
		"lint:auth": "eslint --max-warnings 0 packages/auth/",
		"lint:auth:fix": "pnpm lint:auth --fix",
		"lint:preprocess-katex": "eslint --max-warnings 0 packages/preprocess-katex/",
		"lint:preprocess-katex:fix": "pnpm lint:preprocess-katex --fix",
		"lint:preprocess-markdown": "eslint --max-warnings 0 packages/preprocess-markdown/",
		"lint:preprocess-markdown:fix": "pnpm lint:preprocess-markdown --fix",
		"lint:preprocess-shiki": "eslint --max-warnings 0 packages/preprocess-shiki/",
		"lint:preprocess-shiki:fix": "pnpm lint:preprocess-shiki --fix",
		"lint:svelte-crop-window": "eslint --max-warnings 0 packages/svelte-crop-window/",
		"lint:svelte-crop-window:fix": "pnpm lint:svelte-crop-window --fix",
		"lint:samplekit": "eslint --max-warnings 0 sites/samplekit.dev/",
		"lint:samplekit:fix": "pnpm lint:samplekit --fix",
		"lint:preprocessor-docs": "eslint --max-warnings 0 sites/preprocessor-docs/",
		"lint:preprocessor-docs:fix": "pnpm lint:preprocessor-docs --fix",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "pnpm sync && pnpm lint --fix",
		"check": "pnpm --recursive --no-bail check",
		"clean": "pnpm --recursive --no-bail clean",
		"build:packages": "pnpm --filter './packages/**' --filter '!./packages/*-vscode' build",
		"build:extensions": "pnpm --filter './packages/*-vscode' build",
		"sync": "pnpm --recursive sync",
		"validate": "./scripts/.githooks/pre-commit",
		"install:extensions": "fd .vsix -I | xargs -I {} code --install-extension {}",
		"githooks:init": "git config core.hookspath ./scripts/.githooks",
		"changeset:version": "changeset version",
		"changeset:release": "scripts/release.sh",
		"require-main-branch": "if [ \"$(git rev-parse --abbrev-ref HEAD)\" != \"main\" ]; then echo 'ERROR: Not on main branch.'; exit 1; fi",
		"deploy:sk-prod": "pnpm require-main-branch && TAG=sk-prod/$(git rev-parse --short HEAD) && git tag $TAG && git push origin $TAG",
		"deploy:pp-docs-prod": "pnpm require-main-branch && TAG=pp-docs-prod/$(git rev-parse --short HEAD) && git tag $TAG && git push origin $TAG"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@types/node": "~20.14",
		"@vscode/vsce": "^3.2.0",
		"caprover": "^2.3.1",
		"cspell": "^8.15.4",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-disable-autofix": "^5.0.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-svelte": "^2.45.1",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.10.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/timothycohen/samplekit"
	},
	"bugs": {
		"url": "https://github.com/timothycohen/samplekit/issues"
	}
}
